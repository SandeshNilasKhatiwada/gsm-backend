{
    "name": "marketplace-backend",
    "version": "1.0.0",
    "description": "Multi-Vendor Marketplace Backend API",
    "main": "src/server.js",
    "type": "module",
    "scripts": {
        "dev": "nodemon src/server.js",
        "start": "node src/server.js",
        "test": "NODE_ENV=test NODE_OPTIONS=--experimental-vm-modules npx jest --runInBand --detectOpenHandles --forceExit",
        "test:watch": "NODE_ENV=test NODE_OPTIONS=--experimental-vm-modules npx jest --watch --runInBand",
        "test:coverage": "NODE_ENV=test NODE_OPTIONS=--experimental-vm-modules npx jest --coverage --runInBand",
        "prisma:generate": "prisma generate",
        "prisma:migrate": "prisma migrate dev",
        "prisma:studio": "prisma studio",
        "prisma:seed": "node prisma/seed.js",
        "prisma:reset": "prisma migrate reset"
    },
    "prisma": {
        "seed": "node prisma/seed.js"
    },
    "keywords": [
        "marketplace",
        "express",
        "prisma",
        "postgresql"
    ],
    "author": "",
    "license": "MIT",
    "dependencies": {
        "@prisma/client": "^6.0.1",
        "bcryptjs": "^2.4.3",
        "cookie-parser": "^1.4.6",
        "cors": "^2.8.5",
        "dotenv": "^16.3.1",
        "express": "^4.18.2",
        "express-async-handler": "^1.2.0",
        "jsonwebtoken": "^9.0.2",
        "morgan": "^1.10.0",
        "zod": "^3.22.4"
    },
    "devDependencies": {
        "@types/bcryptjs": "^2.4.6",
        "@types/cookie-parser": "^1.4.6",
        "@types/cors": "^2.8.17",
        "@types/express": "^4.17.21",
        "@types/jest": "^29.5.11",
        "@types/jsonwebtoken": "^9.0.5",
        "@types/morgan": "^1.9.9",
        "@types/node": "^20.10.6",
        "@types/supertest": "^6.0.2",
        "jest": "^29.7.0",
        "nodemon": "^3.0.2",
        "prisma": "^6.0.1",
        "supertest": "^6.3.3"
    }
}